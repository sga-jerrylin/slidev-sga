# Slidev Docker 环境配置
# 实际部署使用的环境配置

# ================================
# 服务器配置
# ================================
# API 服务器端口
API_PORT=3000

# API 服务器主机
API_HOST=0.0.0.0

# 基础 URL（用于生成演示文稿链接）
BASE_URL=http://localhost

# ================================
# 资源限制
# ================================
# 最大并发演示文稿数量
MAX_CONCURRENT=10

# 默认演示文稿存活时间（毫秒）
DEFAULT_TTL=3600000

# 临时文件目录
TEMP_DIR=/app/temp

# 演示文稿端口范围
PORT_RANGE_START=3001
PORT_RANGE_END=3100

# ================================
# 速率限制
# ================================
# 速率限制时间窗口（毫秒）
RATE_LIMIT_WINDOW=900000

# 时间窗口内最大请求数
RATE_LIMIT_MAX=100

# ================================
# 功能开关
# ================================
# 启用 CORS
ENABLE_CORS=true

# 启用压缩
ENABLE_COMPRESSION=true

# ================================
# 日志配置
# ================================
# 日志级别 (error, warn, info, debug)
LOG_LEVEL=info

# ================================
# 环境配置
# ================================
# 运行环境
NODE_ENV=production
